<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_800"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StockFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_900"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="-50dp"
            android:elevation="4dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/purple_1000"
            app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/stockFrag_TV_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="Apple"
                    android:gravity="center_horizontal"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_800"
                    />
                <TextView
                    android:id="@+id/stockFrag_TV_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="appl"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@color/purple_800"
                    />
                <ImageView
                    android:id="@+id/stockFrag_IMG_stockImg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_launcher_round"
                    />
                <TextView
                    android:id="@+id/stockFrag_TV_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="0.0$"
                    android:gravity="center_horizontal"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_800"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stockFrag_TV_StockStatusDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="+184.84(+0.71%)"
                        android:textColor="@color/purple_800"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/stockFrag_TV_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text=" | Today"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/stockFrag_BarChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="70dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="-70dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stockFrag_IMG_predictionStatus"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/prediction_status_unchanged" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|bottom"
                        android:layout_marginBottom="10dp"
                        android:text=" Predicted."
                        android:layout_toEndOf="@+id/stockFrag_IMG_predictionStatus"
                        android:textColor="@color/purple_800"
                        android:textSize="14sp" />
                    <co.ankurg.expressview.ExpressView
                        android:id="@+id/stockFrag_EV_likeButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="2.5dp"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        app:checkedIconTint="@color/dark_red"
                        app:uncheckedIconTint="@color/purple_800"

                        />

                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:paddingHorizontal="50dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:gravity="center|left"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/stockFrag_TV_prevClose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:text="Previous close:\t"/>
                <TextView
                    android:id="@+id/stockFrag_TV_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="15dp"
                    android:text="Open:\t"/>
                <TextView
                    android:id="@+id/stockFrag_TV_high"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="15dp"
                    android:text="High:\t"/>
                <TextView
                    android:id="@+id/stockFrag_TV_low"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="15dp"
                    android:text="Low:\t"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:gravity="center|left"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/stockFrag_TV_vol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_gray"
                    android:text="Vol:\t"/>
                <TextView
                    android:id="@+id/stockFrag_TV_yRange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/light_gray"
                    android:text="Yearly range:\t"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text=""/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text=""/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>